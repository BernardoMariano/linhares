$base_blue = #3399fe
$black = #000
$gray_dark = #333
$gray_darkin = #666
$gray = #999
$gray_light = #ccc
$gray_lighter = #ddd
$gray_lightest = #eee
$white = #fff

hr[class*="spacer"]
    width 40px
    height 3px
    background-color $base_blue
    border 0
    padding 0
    margin 0
    &[class*="sm"]
        width 60px
        height 4px
    
    &[class*="md"]
        width 75px
        height 4px
    
    &[class*="lg"]
        width 90px
        height 5px
    
    &[class*="center"]
        margin 0 auto
    
    &[class*="right"]
        margin 0 0 0 auto
    


