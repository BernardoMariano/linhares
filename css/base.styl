@import 'nib'
@import '_settings'

body
    font-family 'Raleway Regular'
    background-color #e9e9e9
    padding-top 120px

a:focus
    text-decoration none

.container
    max-width 970px

#menu
    background-color $base_blue
    text-align center
    position fixed
    top 0
    left 0
    right 0
    z-index 100
    color $white
    box-shadow inset 0px -3px 0 darken($base_blue, 15%)
    ul
        margin 0
    .contact
        display none

    .menu-link
        display inline-block
        width 120px
        padding 30px 0
        font-size 15px
        font-family 'Raleway Semibold'
        text-transform uppercase
        color $white
        box-shadow inset 0 0 0 rgba($white, 0)
        &:hover
        &.active
            text-decoration none
            box-shadow inset 0 -3px 0 rgba($white, 1)
            transition box-shadow .2s ease-out

        .glyphicon
            font-size 9px
            top -1px

    .doctors-submenu
        padding 0
        border 0
        border-radius 0 0 4px 4px
        background-color darken($base_blue, 30%)
        box-shadow none
        overflow hidden
        li + li
            border-top solid 1px $base_blue
        a
            width 100%
            padding 12px 26px 12px 20px
            color $white
            font-family 'Raleway Medium'
            &:hover
            &:focus
                background-color darken($base_blue, 20%)
            sup
                text-transform lowercase

.menu-overlay
    fixed top bottom left right
    z-index -1
    opacity 0
    background-color rgba($gray_dark, .9)
    transition opacity .5s ease-out


.presentation
    text-align center
    margin-bottom 60px
    h1
        font-size 22px
        font-family 'Raleway Medium'
        margin-bottom 30px
        strong
            display block
            font-size 42px
            font-weight 500
            text-transform uppercase
            font-family 'Raleway Semibold'


.doctors
    margin-bottom 100px
    .doctor
        position relative
        .doctor-inner
            height 210px
            background-color $white
            text-align center
            border solid 1px darken($gray_light, 5%)
            transition all .2s
            border-radius 5px
            box-shadow 0 3px 2px rgba($gray, .5)
            &:hover
                border solid 1px $gray
                box-shadow 0 4px 4px rgba($gray, .5)

        .all-link
            display block
            text-align left
            color $base_blue
            font-family 'Raleway Medium'
            font-size 12px
            padding 10px 0 5px 10px
            transition all .2s
            .glyphicon
                font-size 8px
                top 0
                left -2px
                padding-left 0
                transition padding .3s

            &:hover
                text-decoration none
                color darken($base_blue, 15%)
                .glyphicon
                    padding-left 4px

        .doctor-link
            display block
            height 177px
            &:hover
                .doctor-icon
                    opacity .8

        .doctor-icon
            width 40px
            height 40px
            margin-bottom 30px
            opacity .4
            transition opacity .2s

        .doctor-infos
            position absolute
            bottom 20px
            left 25px
            right 25px

        .doctor-name
            font-family 'Raleway Bold'
            font-size 16px
            margin-bottom 5px
            color $gray_dark

        .doctor-type
            font-size 13px
            font-family 'Raleway Medium'
            color $gray_dark

        .doctor-crm
            font-size 12px
            color $gray
            text-transform uppercase


.clinic
    background-color $base_blue
    position relative
    padding 40px 0
    color $white
    &:before
        content:''
        position absolute
        top -1px
        left 50%
        margin-left -35px
        width 0
        height 0
        border-top solid 23px #e9e9e9
        border-left solid 35px transparent
        border-right solid 35px transparent

    h2
        font-family 'Raleway ExtraLight'
        font-size 40px

    hr
        background-color $white
        margin 20px 0

    p
        padding 10px 0 30px
        margin 0
        strong
            font-weight 400
            font-family 'Raleway Bold'

    .clinic-link
        display block
        width 130px
        background-color transparent
        text-align center
        color $white
        border solid 2px $white
        padding 8px 0
        font-family 'Raleway Medium'
        border-radius 4px
        transition all .2s
        .glyphicon
            font-size 10px
            top 0

        &:hover
            background-color $white
            color $base_blue
            text-decoration none


.map
    background-color $white
    padding-top 80px
    #google-maps
        margin-top 20px
        height 400px


.contact
    padding 60px 0 20px
    background-color $gray_darkin
    color $white
    hr
        margin 0 0 40px 0

    .contact-inner
        display inline-block
        margin-bottom 15px

    .icon-wrapper
        width 30px
        float left
        &.phone
            padding-top 4px

    .contact-infos
        color $white
        margin-left 30px

    .glyphicon
        font-size 18px
        color $base_blue
        
#doctor-page
    margin-bottom 40px
    .breadcrumb
        padding 0
        margin-bottom 20px;
        background-color transparent
        font-size 12px
        font-family 'Raleway Medium'
    .doctor-info
        padding 20px 0
        border-bottom solid 1px $gray_light
    .info-label
        font-family 'Raleway Bold'
        font-size 13px
        display block
    .info-value
        font-family 'Raleway Regular'
        font-size 16px
        ul
            margin-top 10px
            padding-left 25px


@media (max-width 767px)
    body
        padding-top 60px
        &.has-scrolled
            #menu
                .logo
                    transform translateY(-22px)
                    opacity 1
        &.is-menu-open
            overflow hidden
            #menu
                .glyphicon-menu-hamburger
                    display none

                .glyphicon-chevron-left
                    display inline

                .menu-inner
                    transform translateX(0%)
                .contact
                    display block

            .menu-overlay
                opacity 1
                z-index 50

    #menu
        text-align left
        .menu-hamburger-wrapper
            padding 10px 0
            position relative
            .glyphicon
                font-size 26px
                text-shadow 0 1px 0 $gray

            .glyphicon-chevron-left
                display none

            .logo
                position absolute
                left 50%
                margin-left -50px
                text-transform uppercase
                font-family 'Raleway Medium'
                font-size 20px
                line-height 14px
                opacity 0
                transform translateY(18px)
                transition all .15s ease-out

        .menu-inner
            position fixed
            left 0
            right 0
            top 50px
            bottom 0
            background-color darken($base_blue, 15%)
            transform translateX(-100%)
            transition all .4s cubic-bezier(0.2, 0.75, 0.6, 1)
            overflow scroll
            -webkit-overflow-scrolling touch
            li
                display block
                padding 0
                .menu-link
                    width 100%
                    padding 20px 15px
                    border-bottom solid 1px $base_blue
                    &.active
                    &:hover
                        box-shadow none

                    .glyphicon
                        float right
                        padding-right 5px
                        top 4px
                        font-size 12px
            .doctors-submenu
                position static
                display block
                width 100%
                border-radius 0
                a:hover
                a:focus
                    background-color darken($base_blue, 20%)

            .contact
                padding 40px 0 0
                float left
                color $gray_lightest
                h2
                .spacer
                    display none
                .contact-infos
                    color $gray_lightest


    .doctors
        margin-bottom 60px
        .doctor
            margin-bottom 20px

    .map
        #google-maps
            height 250px

    .contact
        .contact-wrapper
            margin-bottom 30px